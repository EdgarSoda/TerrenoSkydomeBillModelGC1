// INPUT VARIABLES //
/////////////////////
in vec2 texCoord;

//////////////////////
// OUTPUT VARIABLES //
//////////////////////
out vec4 outputColor;


///////////////////////
// UNIFORM VARIABLES //
///////////////////////
uniform sampler2D cielo;
uniform vec3 lightDirection;
uniform vec4 diffuseLightColor;


//Aqui se reciben factores uno y facotres dos:
uniform vec4 diffuseLightColor1;
